LoadPlugin df
<Plugin "df">
  ChangeRoot "{{.HostFSPath}}"
  IgnoreSelected {{if .IgnoreSelected}}true{{else}}false{{end}}
{{range .FSTypes}}
  FSType "{{.}}"
{{- end}}
{{range .MountPoints}}
  MountPoint "{{.}}"
{{- end}}
  ReportByDevice {{if .ReportByDevice}}true{{else}}false{{end}}
  ReportInodes {{if .ReportInodes}}true{{else}}false{{end}}
</Plugin>

<Chain "PostCache"> 
  <Rule "set_df_monitor_id"> 
    <Match "regex"> 
      Plugin "^df$" 
    </Match> 
    <Target "set"> 
      MetaData "monitorID" "{{.MonitorID}}" 
    </Target> 
  </Rule> 
</Chain>
