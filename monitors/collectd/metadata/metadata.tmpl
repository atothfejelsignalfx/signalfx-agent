LoadPlugin "python"
TypesDB "{{Globals.PluginRoot}}/signalfx/types.db.plugin"
<Plugin python>
  ModulePath "{{Globals.PluginRoot}}/signalfx/src"
  LogTraces true
  Interactive false

  Import "signalfx_metadata"
  <Module signalfx_metadata>
  {{with .IntervalSeconds -}}
    Interval {{.}}
  {{- end}}
    Notifications true
    URL "{{.WriteServerURL}}"
    Token "unnecessary"
    NotifyLevel "OKAY"
    ProcPath "{{ .ProcFSPath }}"
    EtcPath "./hostfs/etc"
    PersistencePath "./run"
  </Module>
</Plugin>
